<div class="row">
  <div class="col-lg-4 col-lg-offset-4">
    <%= form_for @donation do |f| %>

      <% if @donation.errors.any? %>
        <div class="error_messages">
          <h2><%= pluralize(@donation.errors.count, "error") %>:</h2>
          <ul>
          <% @donation.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <div>
          <%= f.label :title, "Donation Title" %></br>
          <%= f.text_field :title %>
        </div>
        <div>
          <%= f.label :description, "Donation Description" %></br>
          <%= f.text_area :description %>
        </div>
      </div>

      </br>

      <div class="field donatable-field">

      </div>

      <div class="actions">
        <%= f.submit "Create Donation", class: "btn btn-large btn-primary" %>
      </div>

    <% end %>
  </div>
</div>
